    <colgroup>
        <col style="width:30%" />
        <col style="width:70%" />
    </colgroup>
    <tr>
        <td style="padding-left:1%">$var_cal{'caltitle'}</td>
        <td class="right" style="padding-right:1%">{yabb calgotobox}</td>
    </tr>
</table>
<table class="bordercolor pad_4px cs_thin">
    <tr>
        <td class="windowbg">
            <br />
            <span class="small">$var_cal{'calbirthdayinfo'}<br /><br />
